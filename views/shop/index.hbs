<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<br>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="alert alert-success {{#if noMessage}}hidden{{/if}}">
      {{successMessage}}
    </div>
  </div>
</div>

{{# each products }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="...">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <div class="clearfix">
          <div class="pull-left">${{this.price}}</div>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Buy Now</a>
        </div>
      </div>
    </div>
  </div>
  {{/each }}
</div>
{{/each }}